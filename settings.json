{
    "window.commandCenter": true,
    "files.associations": {
        "*.rmd": "markdown"
    },
    "workbench.colorTheme": "Night Owl Black",
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "php.format.rules.arrayInitializersNewLineBeforeFirstElement": true,
    "terminal.integrated.suggest.builtinCompletions": {
        "pwshCode": true,
        "pwshGit": true
    },
    "r.rpath.mac": "/usr/local/bin/R",
    "terminal.integrated.profiles.osx": {
        "Better Shoes (zsh)": {
            "path": "/opt/homebrew/bin/zsh",
            "args": [
                "-c",
                "cd ${workspaceFolder} && /opt/homebrew/bin/zsh"
            ],
            "icon": "terminal-zsh",
            "group": "better-shoes",
            "overrideName": true
        },
        "Framework (zsh)": {
            "path": "/opt/homebrew/bin/zsh",
            "args": [
                "-c",
                "cd ${workspaceFolder}/../framework && /opt/homebrew/bin/zsh"
            ],
            "icon": "terminal-zsh",
            "group": "framework",
            "overrideName": true
        }
    },
    "terminal.integrated.profiles.enabled": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.tabs.showActiveTerminal": "always",
    "terminal.integrated.tabs.focusMode": "singleClick",
    "[r]": {
        "rterm.mac": "/usr/local/bin/R",
        "rterm.option": [
            "--no-save",
            "--no-restore"
        ],
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "REditorSupport.r",
        "lsp.enabled": true,
        "linting.enable": true,
        "linting.lintOnSave": true,
        "linting.lintr.options": {
            "indent_by": 2
        },
        "plot.useHttpgd": true,
        "sessionInit": true,
        "initPath": "~/.vscode-R/init.R", // or absolute path
        "sessionWatcher.enabled": true,
        "sessionWatcher.syncEnvironments": true,
        "bracketedPaste": true,
        "workspaceViewer.enabled": true,
        "lsp.diagnostics": true,
        "rterm.enabled": true,
        "alwaysUseActiveTerminal": true,
        "lsp.path": "/usr/local/bin/R",
        "lsp.args": [
            "--no-save",
            "--no-restore"
        ],
        "lsp.useGlobalR": true
    }
}